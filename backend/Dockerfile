FROM node:16.14

WORKDIR /usr/src/app

ARG DB_HOST=${DB_HOST}
ENV DB_HOST=${DB_HOST}
ARG DB_USER=${DB_USER}
ENV DB_USER=${DB_USER}
ARG DB_PASSWORD=${DB_PASSWORD}
ENV DB_PASSWORD=${DB_PASSWORD}
ARG DB_NAME=${DB_NAME}
ENV DB_NAME=${DB_NAME}
ARG DATABASE_URL=${DATABASE_URL}
ENV DATABASE_URL=${DATABASE_URL}
ARG ACCESS_TOKEN_SECRET=${ACCESS_TOKEN_SECRET}
ENV ACCESS_TOKEN_SECRET=${ACCESS_TOKEN_SECRET}
ARG FRONTEND_URL=${FRONTEND_URL}
ENV FRONTEND_URL=${FRONTEND_URL}
ARG ARGON2_SALT=${ARGON2_SALT}
ENV ARGON2_SALT=${ARGON2_SALT}
ARG ARGON2_SECRET=${ARGON2_SECRET}
ENV ARGON2_SECRET=${ARGON2_SECRET}

COPY ./backend .

RUN npm install

CMD [ "npm", "start" ]